<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Listando Administradores</h1>
  </div>
</div>
<div class="table-responsive-md">
  <table class="table table-hover table-sm">
    <thead class="thead-dark">
      <tr>
        <th>#</th>
        <th>E-mail</th>
        <th>
          Novo
          <%= link_to new_admins_backoffice_admin_path, class: "btn btn-success btn-circle" do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @admins.each do |admin| %>
        <tr>
          <td class="pt-2"><%= admin.id %></td>
          <td class="pt-2"><%= admin.email %></td>
          <td>
            <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle btn-sm m-1" do %>
              <i class="fa fa-edit"></i>
            <% end %>

            <%= link_to admins_backoffice_admin_path(admin), 
                method: :delete, 
                class:"btn btn-danger btn-circle btn-sm",
                data: { confirm: "Confirma a exclusÃ£o do administrador?"} do %>
              <i class="fa fa-trash"></i>
            <% end %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="text-center">
      <%= paginate @admins %>
    </div>
  </div>
</div>
