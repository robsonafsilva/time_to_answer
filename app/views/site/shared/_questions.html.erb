<% @questions.each do |question| %>
  <div class="card">
    <div class="card-header">
      <%= question.description %>
    </div>
    <div class="card-body">
      <ul>
        <% question.answers.each do |answer| %>
          <li class="card-text">
            <%= answer.description %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="text-center">
  <%= paginate @questions %>
</div>
